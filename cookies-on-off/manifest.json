{	"name"					: "Disable Cookies"
, 	"version"				: "1.0.3"
,	"minimum_chrome_version": "19.0"
,	"manifest_version"		: 2
,	"homepage_url"			: "http://singleclickapps.com/disable-cookies"
,	"description"			: "Disable cookies for current domain."

,	"icons"					:
		{ "16"				: "icon.png"
		, "48"				: "icon-48.png"
		, "128"				: "icon-128.png"
		}

,	"permissions"			:
		[ "tabs"
		, "contentSettings"
		, "contextMenus"
		
		, "cookies"
		, "<all_urls>"
		]

,	"browser_action"		:
		{ "default_icon"	: "icon.png"
		, "default_title" : "Disable Cookies"
		}

,	"incognito"				: "spanning"
,	"background"			: 
		{ "page": "background.html"
		, "persistent" : true
		}
,	"options_page"			: "options.html"
}

